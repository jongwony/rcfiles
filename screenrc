shell $SHELL

defscrollback 5000
autodetach on
startup_message off
hardstatus on
hardstatus alwayslastline
hardstatus string "%{WK}%-w%{KW}%t[%n]%{-}%+w %=%{G} %H %{..Y} %Y-%m-%d"

bind ^C login
bind c login
bind ^S split
bind s split
bind ^X remove
bind x remove
bind ^V split -v
bind v split -v

bindkey J stuff ^D
bindkey K stuff ^U

termcapinfo xterm* ti@:te@

mousetrack on
